<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>欢迎</title>
    <script src="/js/vue.min.js"></script>
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
<h1 class="tc">小孟聊天室!</h1>
<hr/>
<dl id="list">
    <template >
        <dd v-bind:class="message.type | convertType"  v-for="message in messages">
            <ul>
                <li class="nick-name">{{ message.nickname }}</li>
                <li class="detail">
                    <div class="head-icon"></div>
                    <div class="text" v-if="message.dataType === 1">
                        <img src="{{ message.img }}">
                    </div>
                    <div class="text" v-else>
                        {{ message.text }}
                    </div>
                </li>
            </ul>
        </dd>
    </template>
</dl>
<div id="option">
    <input type="text" id="keywords" placeholder="请文明聊天"/>
    <span id="send-img"></span>
    <input type="file" accept="image/*" id="img-file"/>
    <input type="button" name="" id="send" value="发送"/>
</div>
<audio src="/audio/notify.wav" id="chat-audio">
    您的浏览器不支持 audio 标签。
</audio>
<div class="placeholder footer"></div>
<script src="/js/socket.io.js"></script>
<script>
    var socket = io.connect('<%= url %>');
    var vm = new Vue({
        el: "#list",
        data: {
            messages: []
        },
        filters: {
            convertType: function (type) {
                return type === 0 ? 'me' : 'other';
            }
        }
    });
    /* 展示消息 */
    function showMessage(data) {
        vm.$data.messages.push(data);
    }


    /*收到加入聊天室广播后，显示消息*/
    socket.on('broadcast_join', function (data) {
        if (data.nickname) {
            console.log(data.nickname + '加入了聊天室');
            var msg = {
                text: data.nickname + '加入了聊天室'
            };
            showNotice(msg);
        }
    });

    /*收到俩开聊天室广播后，显示消息*/
    socket.on('broadcast_quit', function (data) {
        if (data.nickname) {
            console.log(data.nickname + '离开了聊天室');
            var msg = {
                text: data.nickname + '离开了聊天室',
            };
            showNotice(msg);
        }
    });

    /*收到别人发的消息广播后，显示消息*/
    socket.on('broadcast_say', function (data) {
        data.type = 1;
        console.log(data.nickname + '说: ' + data.text);
        document.getElementById('chat-audio').play();
        showMessage(data);
    });

    /*收到别人发的消息广播后，显示消息*/
    socket.on('broadcast_img', function (data) {
        console.log(data.nickname + '发送图片 ');
        document.getElementById('chat-audio').play();
        showMessage(data);
    });


    /*点击发送按钮*/
    document.getElementById('send').onclick = function () {
        var keywords = document.getElementById('keywords');
        if (keywords.value === '') {
            keywords.focus();
            return false;
        }
        var data = {
            text: keywords.value,
            type: 0
        };
        /*向服务器提交一个say事件，发送消息*/
        socket.emit('say', data);

        showMessage(data);
        keywords.value = "";
        keywords.focus();
    };
    document.getElementById('send-img').onclick = function () {
        document.getElementById('img-file').click();
    };

    document.getElementById('img-file').addEventListener('change', function() {
        if (this.files.length != 0) {
            var file = this.files[0],
                    reader = new FileReader();
            if (!reader) {
                alert('你的浏览器不支持FileReader');
                return;
            }
            reader.onload = function(e) {
                socket.emit('img', e.target.result);
                showMessage({
                    type:0,
                    dataType : 1,
                    img: e.target.result
                });
            };
            reader.readAsDataURL(file);
        }
    }, false);

    /*展示通知*/
    function showNotice(data) {
        var item = '<dd class="tc"><span>' + data.text + '</span><dd>';
        document.getElementById('list').innerHTML += item;
    }

    /*回车事件*/
    document.onkeyup = function (e) {
        if (!e) e = window.event;
        if ((e.keyCode || e.which) == 13) {
            document.getElementById('send').click();
        }
    }

</script>
</body>
</html>