<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title></title>
    <style>
        * {
            -webkit-box-sizing: border-box;
            box-sizing: border-box
        }
        input {
            -webkit-appearance: none;
        }

        .tc {
            text-align: center
        }

        body, dd, dl, input, li, ul {
            margin: 0;
            padding: 0
        }

        hr {
            margin: 20px 0;
            height: 0;
            border: 0;
            border-top: 1px solid #ccc
        }

        body {
            background-color: #f2f2f2;
            font: 12px/1.444 "microsoft yahei"
        }

        ul {
            padding: 0 10px;
            list-style: none
        }

        #option {
            position: fixed;
            bottom: 0;
            left: 0;
            display: -webkit-flex;
            display: flex;
            display: -webkit-box;
            padding: 10px;
            width: 100%;
            background-color: #f2f2f2;
            -webkit-flex-direction: row;
            flex-direction: row;
            -webkit-box-orient: horizontal
        }

        #option input {
            outline: 0;
            border: 1px solid #ccc
        }

        input#keywords {
            display: block;
            padding: 0 0 0 10px;
            height: 40px;
            border-right: 0;
            -webkit-flex: 1;
            flex: 1;
            -webkit-box-flex: 1
        }

        input#keywords:focus {
            font-size: 20px
        }

        input#send {
            width: 80px;
            height: 40px;
            border-left: 0;
            background: #8CC63E;
            color: #fff;
            margin-left: 8px;
            border-radius: 4px;
            cursor: pointer;
            -webkit-transition: .3s;
            transition: .3s
        }

        input#send:hover {
            background: #2FBF08
        }

        input#send:active {
            background: #009100
        }

        #list dd {
            overflow: hidden;
            padding: 5px 0
        }

        #list dd li {
            overflow: hidden
        }

        #list dd .nick-name {
            padding: 5px;
            color: #999
        }

        #list dd .head-icon {
            float: left;
            margin: 0 5px;
            width: 30px;
            height: 30px;
            border-radius: 5px;
            background: url(/icons/user_a.png) no-repeat center center;
            background-size: cover
        }

        #list dd .text {
            position: relative;
            float: left;
            padding: 6px 10px;
            max-width: 60%;
            min-height: 30px;
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: #fff;
            color: #333;
            word-wrap: break-word
        }

        #list dd .text:before {
            position: absolute;
            top: 10px;
            width: 0;
            height: 0;
            content: ''
        }

        #list dd.me .text:before {
            right: -4px;
            border-top: 5px solid transparent;
            border-bottom: 5px solid transparent;
            border-left: 5px solid #8CC63E
        }

        #list dd.other .text:before {
            left: -4px;
            width: 5px;
            height: 5px;
            border-bottom: 1px solid #ccc;
            border-left: 1px solid #ccc;
            background-color: #fff;
            -webkit-transform: rotate(45deg);
            transform: rotate(45deg)
        }

        #list dd.me .nick-name {
            display: none;
            text-align: right
        }

        #list dd.me .head-icon {
            float: right;
            background-image: url(/icons/user_b.png)
        }

        #list dd.me .text {
            float: right;
            border: 0;
            background-color: #8CC63E
        }

        .placeholder.footer {
            height: 50px
        }
    </style>
</head>
<body>
<h1 class="tc">小孟聊天室!</h1>
<hr/>
<dl id="list"></dl>
<div id="option">
    <input type="text" id="keywords" placeholder="请文明聊天"/>
    <input type="button" name="" id="send" value="发送"/>
</div>
<audio src="/audio/notify.wav" id="chat-audio">
    您的浏览器不支持 audio 标签。
</audio>
<div class="placeholder footer"></div>
<script src="/js/socket.io.js"></script>
<script>
    function getCookie(name)
    {
        var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
        if(arr = document.cookie.match(reg))
            return unescape(arr[2]);
        else
            return null;
    }
    var socket = io.connect('<%= url %>');

//    var userInfo = {
//        username: (function () {
//            return prompt('请输入聊天室昵称', '');
//        })()
//    };


    /*收到加入聊天室广播后，显示消息*/
    socket.on('broadcast_join', function (data) {
        if (data.nickname) {
            console.log(data.nickname + '加入了聊天室');
            var msg = {
                text: data.nickname + '加入了聊天室'
            };
            showNotice(msg);
        }
    });

    /*收到俩开聊天室广播后，显示消息*/
    socket.on('broadcast_quit', function (data) {
        if (data.nickname) {
            console.log(data.nickname + '离开了聊天室');
            var msg = {
                text: data.nickname + '离开了聊天室'
            };
            showNotice(msg);
        }
    });

    /*收到别人发的消息广播后，显示消息*/
    socket.on('broadcast_say', function (data) {
        console.log(data.nickname + '说: ' + data.text);
        document.getElementById('chat-audio').play();
        showMessage(data);
    });


    /*点击发送按钮*/
    document.getElementById('send').onclick = function () {
        var keywords = document.getElementById('keywords');
        if (keywords.value === '') {
            keywords.focus();
            return false;
        }
        var data = {
            text: keywords.value,
            type: 0
        };
        /*向服务器提交一个say事件，发送消息*/
        socket.emit('say', data);

        showMessage(data);
        keywords.value = "";
        keywords.focus();
    };
    /*展示消息*/
    function showMessage(data) {
        var itemArr = [];
        itemArr.push('<dd class="' + (data.type === 0 ? "me" : "other") + '">');
        itemArr.push('<ul>');
        itemArr.push('<li class="nick-name">' + data.nickname + '</li>');
        itemArr.push('<li class="detail">');
        itemArr.push('<div class="head-icon"></div>');
        itemArr.push('<div class="text">' + data.text + '</div>');
        itemArr.push('</li>');
        itemArr.push('</ul>');
        itemArr.push('</dd>');

        document.getElementById('list').innerHTML += itemArr.join('');
    }
    /*展示通知*/
    function showNotice(data) {
        var item = '<dd class="tc"><span>' + data.text + '</span><dd>';
        document.getElementById('list').innerHTML += item;
    }

    /*回车事件*/
    document.onkeyup = function (e) {
        if (!e) e = window.event;
        if ((e.keyCode || e.which) == 13) {
            document.getElementById('send').click();
        }
    }

</script>
</body>
</html>